@model Publisher
@{
    var publisher = (Publisher)ViewData["publishers"];
}

<form asp-action="Edit" method="post" class="form-group">

    <div class="input-container" />
    <label asp-for="Name">Publisher Name: </label>
    <input class="effect-1" type="text" asp-for="Name" value="@publisher.Name" />
    <span class="focus-border"></span>
    </div>
    <div class="input-container" />
    <label asp-for="Address">Address: </label>
    <input class="effect-1" type="text" asp-for="Address" value="@publisher.Address" />
    <span class="focus-border"></span>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-info" />
    </div>
</form>
